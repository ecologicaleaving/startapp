import React, { useState, useEffect, useCallback } from 'react';
import { View, ActivityIndicator, StyleSheet } from 'react-native';
import { useRouter } from 'expo-router';
import { TournamentStorageService } from '../services/TournamentStorageService';
import TournamentList from "../components/TournamentList";

export default function Index() {
  const [isLoading, setIsLoading] = useState(true);
  const [shouldShowRefereeInterface, setShouldShowRefereeInterface] = useState(false);
  const router = useRouter();

  const checkNavigationState = useCallback(async () => {
    try {
      const navigationState = await TournamentStorageService.getNavigationState();
      
      if (navigationState === 'dashboard') {
        // User has selected tournament, navigate to referee dashboard
        const selectedTournament = await TournamentStorageService.getSelectedTournament();
        if (selectedTournament) {
          router.replace({
            pathname: '/referee-dashboard',
            params: { tournamentData: JSON.stringify(selectedTournament) }
          });
          return;
        }
      }
      
      // Check if we should show referee selection interface or regular tournament list
      const isNewUser = await TournamentStorageService.isNewUser();
      setShouldShowRefereeInterface(isNewUser);
    } catch (error) {
      console.error('Navigation state check failed:', error);
      // Default to regular tournament list on error
      setShouldShowRefereeInterface(false);
    } finally {
      setIsLoading(false);
    }
  }, [router]);

  useEffect(() => {
    checkNavigationState();
  }, [checkNavigationState]);

  if (isLoading) {
    return (
      <View style={styles.loadingContainer}>
        <ActivityIndicator size="large" color="#FF6B35" />
      </View>
    );
  }

  // For now, we'll show the referee interface for new users
  // and regular tournament list for existing users who haven't selected a tournament
  if (shouldShowRefereeInterface) {
    router.replace('/tournament-selection');
    return (
      <View style={styles.loadingContainer}>
        <ActivityIndicator size="large" color="#FF6B35" />
      </View>
    );
  }

  // Show regular tournament list for existing non-referee users
  return <TournamentList />;
}

const styles = StyleSheet.create({
  loadingContainer: {
    flex: 1,
    justifyContent: 'center',
    alignItems: 'center',
    backgroundColor: '#FFFFFF',
  },
});
